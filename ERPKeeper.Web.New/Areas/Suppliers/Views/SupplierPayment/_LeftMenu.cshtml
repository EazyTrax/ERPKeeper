@model ERPKeeperCore.Enterprise.Models.Suppliers.SupplierPayment


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/Suppliers/Suppliers">Suppliers</a><br />
    <a href="/Suppliers/SupplierPayments">SupplierPayments</a><br />
    <a href="/Suppliers/SupplierPayments/@Model.Id">@Model.Purchase.Name.Replace("SL", "RP")</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Detail", $"/Suppliers/SupplierPayments/{Model.Id}");
        MenuTemplate(0, $"Purchase: {Model.Purchase.Name}", $"/Suppliers/Purchases/{Model.PurchaseId}");
        MenuTemplate(0, "Documents", $"/Suppliers/SupplierPayments/{Model.Id}/Documents");

    }
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Export", $"/Suppliers/SupplierPayments/{Model.Id}/Export");
    }
</div>