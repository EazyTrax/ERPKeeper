@model ERPKeeperCore.Enterprise.Models.Suppliers.Supplier




<div class="bg-fb1 p-2 border bg-gray-100">
    <div class="flex flex-wrap justify-between">
        <div class="">
            <div class="font-weight-bold">
                @Model.Profile.Name
            </div>
            @Model.Profile.TaxNumber  ·  @Model.Profile.ShotName<br />
        </div>
        <div class="">
            <a href="/Profiles/@Model.Id">
                Profile
            </a>
        </div>
    </div>
</div>

<div class="grid grid-cols-4">


    <a href="/Suppliers/Suppliers/@Model.Id/PurchaseQuotes">
        <div class="bg-gray-100 h-20 content-center border">
            <div class="text-3xl text-center font-semibold">
                @Organization.ErpCOREDBContext.PurchaseQuotes.Where(s => s.SupplierId == Model.Id).Count()
            </div>
            <div class="text-lg text-center">
                Purchase Quote
            </div>
        </div>
    </a>


    <a href="/Suppliers/Suppliers/@Model.Id/Purchases">
        <div class="bg-gray-100 h-20 content-center border">
            <div class="text-3xl text-center font-semibold">
                @Organization.ErpCOREDBContext.Purchases.Where(s => s.SupplierId == Model.Id).Count()
            </div>
            <div class="text-lg text-center">
                Purchase
            </div>
        </div>
    </a>



    <a href="/Suppliers/Suppliers/@Model.Id/Purchases">
        <div class="bg-gray-100 h-20 content-center border">
            <div class="text-3xl text-center font-semibold">
                @Organization.ErpCOREDBContext.Purchases.Where(s => s.SupplierId == Model.Id && s.Status == ERPKeeperCore.Enterprise.Models.Suppliers.Enums.PurchaseStatus.Open).Count()
            </div>
            <div class="text-lg text-center">
                UnPaid Purchase
            </div>
        </div>
    </a>

    <a href="/Suppliers/Suppliers/@Model.Id/Items">
        <div class="bg-gray-100 h-20 content-center border">
            <div class="text-3xl text-center font-semibold">
                @Organization.ErpCOREDBContext.SupplierItems.Where(s => s.SupplierId == Model.Id).Count()
            </div>
            <div class="text-lg text-center">
                Items
            </div>
        </div>
    </a>
</div>



