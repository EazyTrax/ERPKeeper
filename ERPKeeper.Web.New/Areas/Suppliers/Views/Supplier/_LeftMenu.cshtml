@model ERPKeeperCore.Enterprise.Models.Suppliers.Supplier


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {
                            
                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/Suppliers">Suppliers</a>
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/Suppliers/Suppliers/@Model.Id">@Model.Profile.Name</a>
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Home", $"/Suppliers/Suppliers/{Model.Id}");
        MenuTemplate(0, "Purchases", $"/Suppliers/Suppliers/{Model.Id}/Purchases", Organization.ErpCOREDBContext.Purchases.Where(s=>s.SupplierId == Model.Id).Count());
        MenuTemplate(1, "Quote", $"/Suppliers/Suppliers/{Model.Id}/PurchaseQuotes", Organization.ErpCOREDBContext.PurchaseQuotes.Where(s => s.SupplierId == Model.Id).Count());
        MenuTemplate(0, "Payments", $"/Suppliers/Suppliers/{Model.Id}/ReceivePayments", Organization.ErpCOREDBContext.SupplierPayments.Where(s => s.Purchase.SupplierId == Model.Id).Count());
        MenuTemplate(0, "Items", $"/Suppliers/Suppliers/{Model.Id}/Items");
    }
</div>
