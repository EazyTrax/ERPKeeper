@model ERPKeeperCore.Enterprise.Models.Suppliers.Supplier



@{
    var Purchases = Model.Purchases.ToList();
}


<style>
    .dx-treelist .dx-row > td {
        padding: 2px !important;
    }
</style>


<div id="treeListDemo" class="mb-3">

    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Suppliers.Purchase>()
        .ID("gridList")
        .DataSource(Purchases)

        .KeyExpr("Id")

        
        .ShowRowLines(true)
        .ShowBorders(false)
        .Paging(paging => paging.PageSize(100))

        //.SearchPanel(searchPanel => searchPanel.Visible(true))
        .HeaderFilter(headerFilter => headerFilter.Visible(true).AllowSearch(true))

        .ColumnAutoWidth(false)
        @*.AutoExpandAll(true)*@
        .RowDragging(rd => rd
        .AllowDropInsideItem(false)
        .AllowReordering(false)
        @*.OnDragChange("onDragChange")
    .OnDragEnd("onDragEnd")
    .ShowDragIcons(false)*@
        )
            .Columns(columns =>
            {



                columns.AddFor(m => m.Date).Format("dd-MM-yyyy").SortOrder(SortOrder.Desc).SortIndex(1).Width(100);
                columns.AddFor(m => m.Status).SortOrder(SortOrder.Asc).SortIndex(2).Lookup(lookup => lookup
            .DataSource(Html.GetEnumSelectList<ERPKeeperCore.Enterprise.Models.Customers.Enums.SaleStatus>().Select(i => new { Value = int.Parse(i.Value), Text = i.Text }))
            .DisplayExpr("Text")
            .ValueExpr("Value")
            );
                columns.Add().DataField("Name")
            .Width(130)
            .CellTemplate(@<text>
        <a href="/@CompanyId/Suppliers/Purchase/<%= data.Id %>/">
            <%= data.Name %>
        </a>
    </text>);

                columns.Add().DataField("Reference");
                columns.Add().DataField("Total").Format(Format.FixedPoint);
                //columns.Add().DataField("Id");
            })
        )
</div>

