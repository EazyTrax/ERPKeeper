@model ERPKeeperCore.Enterprise.Models.Suppliers.Purchase




<div class="bg-fb1 p-2 mb-2">
    <div class="font-weight-600">Items</div>
</div>


@{
    var Quotes = Model.Items.ToList();


}


<style>
    .dx-treelist .dx-row > td {
        padding: 2px !important;
    }
</style>


<div id="treeListDemo" class="mb-3">

    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Suppliers.PurchaseItem>()
    .ID("gridList")
    
    .RowAlternationEnabled(true)
    .KeyExpr("Id")
    .ShowRowLines(true)
    .ShowBorders(false)
    .Paging(paging => paging.PageSize(100))
    .HeaderFilter(headerFilter => headerFilter.Visible(true).AllowSearch(true))
    .ColumnAutoWidth(false)
    .Columns(columns => {

   

    columns.AddFor(m=>m.Item.PartNumber)

    .CellTemplate(@<text>
            <a href="/@CompanyId/Products/Items/<%= data.Item.Id %>/">
                <%= data.ItemPartNumber %>
            </a>
        </text>);

         columns.AddFor(m=>m.Description).Width(300);
        columns.AddFor(m=>m.Quantity).Width(80).Format(Format.FixedPoint);
          columns.AddFor(m=>m.Price).Width(80).Format(Format.FixedPoint);
    columns.AddFor(m=>m.LineTotal).Width(80).Format(Format.FixedPoint);
    //columns.Add().DataField("Id");
    })
    )
</div>

