@using ERPKeeperCore.Enterprise.Models.Suppliers.Enums

@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/@CompanyId/Profiles">Profiles</a> :
    <a href="/@CompanyId/Suppliers">Suppliers</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Suppliers", $"/{CompanyId}/Suppliers/Suppliers", Organization.Suppliers.Count());
        MenuTemplate(1, "Quotes", $"/{CompanyId}/Suppliers/PurchaseQuotes", Organization.ErpCOREDBContext.PurchaseQuotes.Count());
        MenuTemplate(0, "Purchases", $"/{CompanyId}/Suppliers/Purchases", Organization.ErpCOREDBContext.Purchases.Count());
        MenuTemplate(0, "Payments", $"/{CompanyId}/Suppliers/SupplierPayments", Organization.ErpCOREDBContext.SupplierPayments.Count());
    }
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/@CompanyId/Profiles">Profiles</a> :
    <a href="/@CompanyId/Suppliers">Suppliers</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Suppliers", $"/{CompanyId}/Suppliers/Suppliers", Organization.Suppliers.Count());
        MenuTemplate(0, "Quotes", $"/{CompanyId}/Suppliers/PurchaseQuotes", Organization.ErpCOREDBContext.PurchaseQuotes.Where(s => s.Status ==  PurchaseQuoteStatus.Quote).Count());
        MenuTemplate(0, "Order", $"/{CompanyId}/Suppliers/PurchaseQuotes", Organization.ErpCOREDBContext.PurchaseQuotes.Where(s => s.Status == PurchaseQuoteStatus.Order).Count());
        MenuTemplate(0, "Purchases", $"/{CompanyId}/Suppliers/Purchases", Organization.ErpCOREDBContext.Purchases.Where(s => s.Status == PurchaseStatus.Invoice).Count());
        MenuTemplate(1, "Payments", $"/{CompanyId}/Suppliers/ReceivePayments");
    }
</div>