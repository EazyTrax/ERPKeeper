            </div>
            <div class="w-28">
                @item.Name
            </div>
            <div class="flex-1 pl-2">
                @item.Customer.Profile.Name
            </div>
            <div class="w-28 p-0">
                @item.Customer.Profile.TaxNumber
            </div>
            <div class="w-24 p-0 text-right">
