            <div>
                @Model.StartDate.ToString("dd-MMM-yyyy") - @Model.EndDate.ToString("dd-MMM-yyyy")
            </div>

        </div>
    </div>




    <div class="flex border-bottom font-semibold">
        <div class="w-12">ลำดับ</div>
