@model ERPKeeperCore.Enterprise.Models.Taxes.TaxPeriod


@{
    bool checkCurrentController(string controllerName)
    {
        var currentControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
        return currentControllerName == controllerName;
    }

    void Template(string display, string url, int? count = null)
    {
        <div class="flex  justify-between e pl-0 @(checkCurrentController(url) ? "font-weight-600" : "")">
            <div class="">
                <a href="@url">
                    @SharedLocalizer.GetLocalizedHtmlString(display)
                </a>
            </div>
            <div class="">
                <span class="badge badge-light text-dark">@count</span>
            </div>
        </div>
    }
}

<div class="font-weight-600 border p-2 bg-gray-100">
    <a href="/Taxes">Taxes</a><br />
</div>
<div class="font-weight-600 border p-2 bg-gray-100">
    <a href="/Taxes/TaxPeriods">TaxPeriods</a> <br />
    <a href="/Taxes/TaxPeriods/@Model.Id">@Model.Name</a>
</div>
<div class="border p-2 bg-gray-100">
    @{
        Template("Home", $"/Taxes/TaxPeriods/{Model.Id}");
        Template("Sales", $"/Taxes/TaxPeriods/{Model.Id}/Sales", Model.SalesCount);
        Template("Purchase", $"/Taxes/TaxPeriods/{Model.Id}/Purchases", Model.PurchasesCount);
        Template("AutoAssign (ThisMonth)", $"/Taxes/TaxPeriods/{Model.Id}/AutoAssign");
        Template("AutoAssign (PreviusMonth)", $"/Taxes/TaxPeriods/{Model.Id}/AutoAssign?IsHistoryAssign=True");
        Template("Export", $"/Taxes/TaxPeriods/{Model.Id}/Export", Model.PurchasesCount);
    }
</div>