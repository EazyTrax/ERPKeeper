@model ERPKeeperCore.Enterprise.Models.Customers.SaleQuote


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id">@Model.Name</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Detail", $"/{CompanyId}/Customers/SaleQuotes/{Model.Id}");
        MenuTemplate(0, "Items", $"/{CompanyId}/Customers/SaleQuotes/{Model.Id}/Items", Model.Items.Count());
        MenuTemplate(0, "Documents", $"/{CompanyId}/Customers/SaleQuotes/{Model.Id}/Documents");

        if (Model.SaleId != null)
        {
            MenuTemplate(0, "Sale", $"/{CompanyId}/Customers/Sales/{Model.SaleId}");
        }
    }
</div>

@if (Model.SaleId != null)
{
    <div class="lh-120 bg-gray-100 p-2 rounded border">
        <div>Sale</div>
    </div>
}

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Export", $"/{CompanyId}/Customers/SaleQuotes/{Model.Id}/Export");
    }
</div>
