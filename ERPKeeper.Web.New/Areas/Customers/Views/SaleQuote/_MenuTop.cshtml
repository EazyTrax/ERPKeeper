@model ERPKeeperCore.Enterprise.Models.Customers.SaleQuote


<div class="flex text-uppercase justify-between">
    <div class="p-2 font-semibold text-lg">
        <a href="/@CompanyId/Customers"> Customers</a>
        <i class="fa-solid fa-chevron-right text-danger text-sm"></i> <a href="/@CompanyId/Customers/SaleQuotes"> SaleQuotes</a>
        <i class="fa-solid fa-chevron-right text-danger text-sm"></i> <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id"> @Model.Name</a>
        <i class="fa-solid fa-chevron-right text-danger text-sm"></i> <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id/@ActionName"> @ActionName</a>
    </div>
    <div class="p-2">
        <div class="dropdown dropleft ">
            <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-solid fa-bars text-xl"></i>
            </a>
            <div class="dropdown-menu p-2 bg-white border-2 border rounded w-60" aria-labelledby="dropdownMenuLink">
                <div>
                    <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id/Refresh">Refresh</a>
                </div>

                <div>
                    <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id/Clone">Clone</a>
                </div>

                <div>
                    <a href="/@CompanyId/Customers/SaleQuotes/@Model.Id/Delete" onclick="return confirm('Are you sure you want to convert to an invoice?');">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>