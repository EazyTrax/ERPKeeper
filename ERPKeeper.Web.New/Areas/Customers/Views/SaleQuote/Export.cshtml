@model ERPKeeperCore.Enterprise.Models.Customers.SaleQuote

@{
    Layout = "_Layout_Export";
    var documentNameContent = "ใบเสนอราคา";
    var customerAddress = Model.Customer.Profile.Addresses.FirstOrDefault();
}

@await Html.PartialAsync("/areas/enterprise_export/view/shared/_header.cshtml", documentNameContent)


<div class="grid grid-cols-3 gap-2 mb-3" id="BuyerDetail">
    <div class="col-span-2 border border-dark rounded-md p-2">
        <div>
            <b>ผู้ซื้อ</b>
            <a href="/@CompanyId/Customers/Customers/@Model.CustomerId">
                @Model.Customer.Profile.Name
            </a>
        </div>
        <div>
            เลขที่ผู้เสียภาษี @Model.Customer.Profile.TaxNumber สาขา @customerAddress?.Number
        </div>
        @if (customerAddress != null)
        {
            <div>
                @customerAddress.AddressLine.Trim()<br />
                @customerAddress.PhoneNumber
            </div>
        }
    </div>
    <div class=" border border-dark rounded-md p-2">
        <div class="grid grid-cols-2 gap-x-2">
            <div class="font-semibold">เลขที่</div>
            <div class="text-right">@Model.Name</div>

            <div class="font-semibold">วันที่</div>
            <div class="text-right">@Model.Date.ToShortDateString()</div>

            <div class="font-semibold">อ้างอิง</div>
            <div class="text-right">@Model.Reference</div>
        </div>
    </div>
</div>

<!-- Items Table -->
<div class="mb-3 border border-dark rounded-md p-2" id="Items">
    <!-- Table Header -->
    <div class="grid grid-cols-12 gap-2 font-semibold">
        <div class="col-span-7 text-center">รายการ</div>
        <div class="col-span-1 text-right">จำนวน</div>
        <div class="col-span-2 text-right">หน่วยล่ะ</div>
        <div class="col-span-2 text-right">รวม</div>
    </div>
    <div class="mb-2">
        @foreach (var item in Model.Items.ToList())
        {
            <div class="grid grid-cols-12 gap-2 pb-1 no-break">
                <div class="flex col-span-7">
                    <div class="pr-2">
                        <span class="font-semibold pr-1">@item.Order</span>
                    </div>
                    <div>
                        <div class="font-semibold">@item.PartNumber</div>
                        <div class="">
                            @Html.Raw(item.Description.Replace("\n", "</br>"))

                        </div>
                    </div>

                </div>
                <div class="col-span-1 text-right">@item.Quantity</div>
                <div class="col-span-2 text-right">@item.PriceAfterDiscount.ToString("N2")</div>
                <div class="col-span-2 text-right">@item.LineTotal.ToString("N2")</div>
            </div>
        }
    </div>
</div>


<div class="grid grid-cols-3 gap-2 mb-1 border border-dark rounded-md p-2  no-break" id="Summary">
    <div class="col-span-2">
        ข้อมูลการชำระเงิน<br />
        ชื่อบัญชี: บริษัท เดอะ เอ็นจิเนียริ่ง คร๊าฟ จำกัด<br />
        ธนาคาร:  SCB เลขที่บัญชี 667-294439-3
    </div>
    <div class="mb-2">
        @if (@Model.Discount > 0)
        {
            <div class="grid grid-cols-2 gap-4">

                <div class="text-right">ส่วนลด</div>
                <div class="text-right ">@Model.Discount.ToString("N2")</div>
            </div>
        }

        <div class="grid grid-cols-2 gap-4">
            <div class="text-right">ราคารวม</div>
            <div class="text-right ">@Model.LinesTotalAfterDiscount.ToString("N2")</div>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div class="text-right">ภาษีมูลค่าเพิ่ม</div>
            <div class="text-right ">@Model.Tax.ToString("N2")</div>
        </div>

        <div class="grid grid-cols-2 gap-4 ">
            <div class="text-right">ราคารวมภาษี</div>
            <div class="text-right ">@Model.Total.ToString("N2")</div>
        </div>

       
    </div>
    <div class="text-right pt-2">
        (@ERPKeeperCore.Enterprise.Helpers.ThaiMoneyConverter.ReturnThaiMoney(Model.Total))
    </div>
</div>



<div class="mb-3">
  Issuer: @User.Identity.Name
</div>