


<div id="treeListDemo" class="mb-3">

    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Customers.Sale>()
        .ID("gridList")
        .DataSource(d => d.RemoteController().Key("Uid")
        .LoadUrl($"/API/{CompanyId}/Customers/Quotes/All")
        .InsertUrl($"/API/{CompanyId}/Customers/Quotes/Insert")
        .UpdateUrl($"/API/{CompanyId}/Customers/Quotes/Update")
        .UpdateMethod("Post")
        .DeleteUrl($"/API/{CompanyId}/Customers/Quotes/Delete")
        .DeleteMethod("Post")
        )
        .KeyExpr("Uid")
        .RowAlternationEnabled(true)
        .ShowRowLines(false)
        .ShowBorders(false)
        .Paging(paging => paging.PageSize(100))

        //.SearchPanel(searchPanel => searchPanel.Visible(true))
        .HeaderFilter(headerFilter => headerFilter.Visible(true).AllowSearch(true))

        .ColumnAutoWidth(false)
        @*.AutoExpandAll(true)*@
        .RowDragging(rd => rd
        .AllowDropInsideItem(false)
        .AllowReordering(false)
        @*.OnDragChange("onDragChange")
    .OnDragEnd("onDragEnd")
    .ShowDragIcons(false)*@
        )
            .Editing(e => e.AllowUpdating(true))
            .Columns(columns =>
            {
                columns.AddFor(m => m.TrnDate).Format("dd-MM-yyyy").SortOrder(SortOrder.Desc).SortIndex(1).Width(100);
                columns.AddFor(m => m.Status).Width(80).SortOrder(SortOrder.Desc).SortIndex(2).Lookup(lookup => lookup
            .DataSource(Html.GetEnumSelectList<ERPKeeperCore.Enterprise.Models.Estimations.Enums.QuoteStatus>().Select(i => new { Value = int.Parse(i.Value), Text = i.Text }))
            .DisplayExpr("Text")
            .ValueExpr("Value")
            );

                columns.Add().DataField("Name")
            .Width(130)
            .CellTemplate(@<text>
        <a href="/@CompanyId/Customers/Quotes/<%= data.Uid %>/">
            <%= data.Name %>
        </a>
    </text>);

                columns.Add().DataField("ProfileName")
            .Width(300)
            .CellTemplate(@<text>
        <a href="/@CompanyId/Customers/Customers/<%= data.ProfileUid %>/">
            <%= data.ProfileName %>
        </a>
    </text>);

                columns.Add().DataField("Reference");
                columns.Add().DataField("LinesTotal").Format(Format.FixedPoint);
                columns.Add().DataField("Total").Format(Format.FixedPoint);
                //columns.Add().DataField("Id");
            })
        )
</div>

