@model ERPKeeperCore.Enterprise.Models.Customers.ReceivePayment


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/Customers/Customers">Customers</a><br />
    <a href="/Customers/ReceivePayments">ReceivePayments</a><br />
    <a href="/Customers/ReceivePayments/@Model.Id">@Model.Sale.Name.Replace("SL", "RP")</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Detail", $"/Customers/ReceivePayments/{Model.Id}");
        MenuTemplate(0, $"Sale: {Model.Sale.Name}", $"/Customers/Sales/{Model.SaleId}");
        MenuTemplate(0, "Documents", $"/Customers/ReceivePayments/{Model.Id}/Documents");

    }
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Export", $"/Customers/ReceivePayments/{Model.Id}/Export");
    }
</div>