@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded border font-weight-600">
    <a href="/@CompanyId/Profiles">Profiles</a> :
    <a href="/@CompanyId/Customers">Customers</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Customers", $"/{CompanyId}/Customers/Customers", Organization.Customers.Count());
        MenuTemplate(0, "Quotes", $"/{CompanyId}/Customers/SaleQuotes", Organization.ErpCOREDBContext.SaleQuotes.Count());
        MenuTemplate(0, "Sales", $"/{CompanyId}/Customers/Sales", Organization.ErpCOREDBContext.Sales.Count());
        MenuTemplate(1, "Payments", $"/{CompanyId}/Customers/ReceivePayments", Organization.ErpCOREDBContext.ReceivePayments.Count());
    }
</div>
