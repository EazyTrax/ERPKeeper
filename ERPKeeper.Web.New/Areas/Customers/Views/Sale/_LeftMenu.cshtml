@model ERPKeeperCore.Enterprise.Models.Customers.Sale


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="row e-r">
                <div class="col-10 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {
                            <i class="fa-solid fa-l"></i>
                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-fb1 p-2 rounded border font-weight-600">
    <a href="/@CompanyId/Customers/Sales">Sales</a>:
    <a href="/@CompanyId/Customers/Sales/@Model.Id">@Model.Name</a>
</div>

<div class="lh-120 bg-fb1 p-2 rounded border">
    @{
        MenuTemplate(0, "Detail", $"/{CompanyId}/Customers/Sales/{Model.Id}");
        MenuTemplate(0, "Items", $"/{CompanyId}/Customers/Sales/{Model.Id}/Items", Model.Items.Count());
        MenuTemplate(0, "Export", $"/{CompanyId}/Customers/Sales/{Model.Id}/Export");
        MenuTemplate(0, "Payments", $"/{CompanyId}/Customers/Sales/{Model.Id}/Payments");
    }
</div>
