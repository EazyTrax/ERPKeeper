@model ERPKeeperCore.Enterprise.Models.Customers.Sale

@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/Customers/Sales/@Model.Id">@Model.Name</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Detail", $"/Customers/Sales/{Model.Id}");
        MenuTemplate(0, "Items", $"/Customers/Sales/{Model.Id}/Items", Model.Items.Count());
        MenuTemplate(0, "Payment", $"/Customers/Sales/{Model.Id}/Payment");

        MenuTemplate(0, "Shipments", $"/Customers/Sales/{Model.Id}/Shipments");
        MenuTemplate(0, "Notes", $"/Customers/Sales/{Model.Id}/Notes");
        MenuTemplate(0, "Documents", $"/Customers/Sales/{Model.Id}/Documents");
    }
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Export TaxInvoice", $"/Customers/Sales/{Model.Id}/Export?DocumentName=TaxInvoice");
        MenuTemplate(0, "Export TaxInvoice(Copy)", $"/Customers/Sales/{Model.Id}/Export?DocumentName=TaxInvoiceCopy");
        MenuTemplate(0, "Export InVat Invoice", $"/Customers/Sales/{Model.Id}/ExportInVat?DocumentName=TaxInvoice");
        MenuTemplate(0, "Export DeliveryNote", $"/Customers/Sales/{Model.Id}/Export_DeliveryNote?DocumentName=DeliveryNote");

    }
</div>
