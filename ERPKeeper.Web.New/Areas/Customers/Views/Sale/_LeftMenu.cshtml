@model ERPKeeperCore.Enterprise.Models.Customers.Sale


@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-gray-100 p-2 rounded  border font-semibold">


    <a href="/@CompanyId/Customers/Sales/@Model.Id">@Model.Name</a>
</div>

<div class="lh-120 bg-gray-100 p-2 rounded  border">
    @{
        MenuTemplate(0, "Detail", $"/{CompanyId}/Customers/Sales/{Model.Id}");
        MenuTemplate(0, "Items", $"/{CompanyId}/Customers/Sales/{Model.Id}/Items", Model.Items.Count());
        MenuTemplate(0, "Payment", $"/{CompanyId}/Customers/Sales/{Model.Id}/Payment");
        MenuTemplate(0, "Shipments", $"/{CompanyId}/Customers/Sales/{Model.Id}/Shipments" );
        MenuTemplate(0, "Documents", $"/{CompanyId}/Customers/Sales/{Model.Id}/Documents");
    }
</div>
<div class="lh-120 bg-gray-100 p-2 rounded  border">
    @{
        MenuTemplate(0, "Export ต้นฉบับ", $"/{CompanyId}/Customers/Sales/{Model.Id}/Export?DocumentName=ใบกำกับภาษี");
        MenuTemplate(0, "Export สำเนา", $"/{CompanyId}/Customers/Sales/{Model.Id}/Export?DocumentName=สำเนาใบกำกับภาษี");
    }
</div>
