@model ERPKeeperCore.Enterprise.Models.Projects.Project

<div class="row">
    <div class="col-8 p-0 col-center">
        
        <partial name="_EditForm" />
    </div>
    <div class="col-4 p-0 col-right">


        <div class="row bg-fb1 p-2 mb-2 rounded">
            <div class="col-9 p-0 font-weight-600">
            </div>
            <div class="col-4 p-0 text-right">




                @{
                    if (Model.Status == ERPKeeperCore.Enterprise.Models.Projects.Enums.ProjectStatus.Open)
                    {
                        <a href="/Customers/Projects/@Model.Id/close" class="btn text-white py-1 btn-sm" style="background-color: #5D6EAE;">
                            Close
                        </a>
                    }
                    else
                    {
                        <a href="/Customers/Projects/@Model.Id/open" class="btn text-white py-1 btn-sm" style="background-color: #5D6EAE;">
                            Re-Open
                        </a>
                    }
                }

            </div>
        </div>

    </div>
</div>

