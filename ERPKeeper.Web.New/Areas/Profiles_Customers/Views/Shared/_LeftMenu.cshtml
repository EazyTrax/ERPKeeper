@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="row e-r">
                <div class="col-10 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {
                            <i class="fa-solid fa-l"></i>
                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-fb1 p-2 rounded border font-weight-600">
    <a href="/@CompanyId/Profiles">Profiles</a> :
    <a href="/@CompanyId/Profiles/Customers">Customers</a>
</div>

<div class="lh-120 bg-fb1 p-2 rounded border">
    @{
        MenuTemplate(0, "Customers", $"/{CompanyId}/Profiles/Customers/Customers", Organization.Customers.Count());
        MenuTemplate(0, "Projects", $"/{CompanyId}/Profiles/Customers/Projects", Organization.ErpCOREDBContext.Projects.Count());
        MenuTemplate(0, "Quotes", $"/{CompanyId}/Profiles/Customers/SaleQuotes", Organization.ErpCOREDBContext.SaleQuotes.Count());
        MenuTemplate(0, "Sales", $"/{CompanyId}/Profiles/Customers/Sales", Organization.ErpCOREDBContext.Sales.Count());
        MenuTemplate(1, "Payments", $"/{CompanyId}/Profiles/Customers/ReceivePayments", Organization.ErpCOREDBContext.ReceivePayments.Count());
    }
</div>
