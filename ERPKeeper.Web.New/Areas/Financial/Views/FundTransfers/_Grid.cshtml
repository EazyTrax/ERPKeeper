
<div id="treeListDemo" class="mb-3 border">
    @(
            Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Financial.FundTransfer>()
            .ID("gridList")
            .KeyExpr("Id")
            .DataSource(d => d.RemoteController().Key("Id")
            .LoadUrl($"/API/{CompanyId}/Financials/FundTransfers/All")
            .InsertUrl($"/API/{CompanyId}/Financials/FundTransfers/Insert"))
            .RowAlternationEnabled(true)
            .ShowRowLines(false)
            .ShowBorders(false)
            .Paging(paging => paging.PageSize(100))
            .HeaderFilter(headerFilter => headerFilter.Visible(true))
            .ColumnAutoWidth(false)
            .Columns(columns =>
            {


                columns.AddFor(m => m.Date).Alignment(HorizontalAlignment.Right).Format("dd-MM-yyyy").SortOrder(SortOrder.Desc).SortIndex(1).Width(130);

                columns.AddFor(m => m.Status).Width(80).Lookup(lookup => lookup
            .DataSource(Html.GetEnumSelectList<ERPKeeperCore.Enterprise.Models.Financial.Enums.FundTransferStatus>().Select(i => new { Value = int.Parse(i.Value), Text = i.Text }))
            .DisplayExpr("Text")
            .ValueExpr("Value")
            );

                columns.Add().DataField("Name").Width(130)
            .CellTemplate(@<text><a href="/@CompanyId/Financial/FundTransfers/<%= data.Id %>/"><%= data.Name %></a></text>);
                columns.AddFor(m => m.Reference).Width(180);
                columns.AddFor(m => m.Debit).Width(130).Format(Format.FixedPoint);
                columns.AddFor(m => m.Credit).Width(130).Format(Format.FixedPoint);






                columns.AddFor(m => m.IsPosted)
            .AllowEditing(false).Width(30)
            .HeaderCellTemplate(@<text> </text>)
        .CellTemplate(@<text><i class="fas fa-fingerprint text-color-<%= data.PostStatus %>"></i></text>);




            })
        )
</div>

