
<div id="treeListDemo" class="mb-3 border">
    @(
        Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Financial.PaymentTerm>()
        .ID("gridList")
        .KeyExpr("Id")
        .DataSource(d => d.RemoteController().Key("Id")
        .LoadUrl($"/API/{CompanyId}/Financial/PaymentTerms/All")
        .InsertUrl($"/API/{CompanyId}/Financial/PaymentTerms/Insert")
        .InsertMethod("Post")
        .UpdateUrl($"/API/{CompanyId}/Financial/PaymentTerms/Update")
        .UpdateMethod("Post")
        )
        .RowAlternationEnabled(true).AllowColumnReordering(true)
        .ShowRowLines(false)
        .ShowBorders(false)
        .Paging(paging => paging.PageSize(100))
        .HeaderFilter(headerFilter => headerFilter.Visible(true).Search(s => s.Enabled(true)))
        .ColumnAutoWidth(false)
        .Editing(editing => editing.Mode(GridEditMode.Row).AllowUpdating(IsOnEditMode).AllowAdding(IsOnEditMode).UseIcons(true))

        .Columns(columns =>
        {


            columns.AddFor(m => m.Name);



        })
        )
</div>

