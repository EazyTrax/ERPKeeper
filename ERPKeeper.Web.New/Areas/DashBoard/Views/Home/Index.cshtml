
<div class="flex flex-wrap">
    <div class="col-center-div grow mh-100v border-right">

        <script>
            function clearTreeListStateStoring() {
                localStorage.clear(); // Remove all items from localStorage
                alert('TreeList state has been cleared');
            }
        </script>

        <button onclick="clearTreeListStateStoring()">Clear TreeList State</button>


    </div>
    <div class="w-4/12 p-0">
        @{
            var currentFiscalYear = Organization.FiscalYears.CurrentPeriod;

            if (currentFiscalYear != null)
            {
                <partial name="/areas/accounting/views/fiscalyear/_chart_profitandlost.cshtml" model="currentFiscalYear" />
                <partial name="/areas/accounting/views/fiscalyear/_Chart_Asset_Liability_Equity.cshtml" model="currentFiscalYear" />
            }
        }
    </div>
</div>