@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-100 font-semibold p-2 rounded border">
    @{
        MenuTemplate(0, "Home", $"/{CompanyId}");
    }
</div>
<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Customers", $"/{CompanyId}/Customers", Organization.Customers.Count());
        MenuTemplate(0, "Suppliers", $"/{CompanyId}/Suppliers", Organization.Suppliers.Count());
        MenuTemplate(0, "Employees", $"/{CompanyId}/Employees", Organization.Employees.Count());
        MenuTemplate(0, "Investors", $"/{CompanyId}/Investors", Organization.Investors.Count());
        MenuTemplate(0, "Profiles", $"/{CompanyId}/Profiles", Organization.Profiles.Count());
    }
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Products", $"/{CompanyId}/Products", Organization.Items.Count());
        MenuTemplate(0, "Projects", $"/{CompanyId}/Projects", Organization.Projects.Count());
