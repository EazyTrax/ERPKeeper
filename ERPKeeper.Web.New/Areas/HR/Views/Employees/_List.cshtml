@using ERPKeeperCore.Enterprise.Models.Employees.Enums

<div id="treeList" class="">
    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Employees.Employee>()
            .ID("gridList")
            .DataSource(d => d.RemoteController()
            .Key("Id")
            .LoadUrl($"/API/HR/Employees/All")
            .UpdateUrl($"/API/HR/Employees/Update")
            .UpdateMethod("Post"))
            .KeyExpr("Id")
            .RowAlternationEnabled(true).AllowColumnReordering(true)
            .ShowRowLines(true)
            .ShowBorders(false)
            .Paging(paging => paging.PageSize(100))
            .Editing(editing => editing
                .Mode(GridEditMode.Cell)
                .AllowUpdating(true)
                .StartEditAction(GridStartEditAction.Click))

            .HeaderFilter(headerFilter => headerFilter.Visible(true).Search(s=>s.Enabled(true)))
            .FilterRow(filterRow => filterRow.Visible(true).ApplyFilter(GridApplyFilterMode.Auto))
            .ColumnAutoWidth(false)
            .Columns(columns =>
            {

                columns.AddFor(m => m.Id).Width(150)
            .Lookup(lookup => lookup
            .DataSource(Organization.ErpCOREDBContext.Profiles.Select(i => new { Value = i.Id, Text = i.TaxNumber }).ToList())
            .DisplayExpr("Text")
            .ValueExpr("Value"))
            .AllowEditing(false)
            .HeaderCellTemplate(@<text>TAX</text>)
            .CellTemplate(@<text><a href="/HR/Employees/<%= data.Id %>/"><%= displayValue %></a></text>);



                columns.AddFor(m => m.Id)
                .Lookup(lookup => lookup
            .DataSource(Organization.ErpCOREDBContext.Profiles.Select(i => new { Value = i.Id, Text = i.Name }).ToList())
            .DisplayExpr("Text")
            .ValueExpr("Value"))
            .AllowEditing(false)
            .HeaderCellTemplate(@<text>Employee</text>)
            .CellTemplate(@<text><a href="/HR/Employees/<%= data.Id %>/"><%= displayValue %></a></text>);



                columns.AddFor(m => m.EmployeePositionId).Width(150)
            .Lookup(lookup => lookup
            .DataSource(Organization.ErpCOREDBContext.EmployeePositions.Select(i => new { Value = i.Id, Text = i.Title }).ToList())
            .DisplayExpr("Text")
            .ValueExpr("Value"))
            .AllowEditing(false)
            .HeaderCellTemplate(@<text>Position</text>)
            .CellTemplate(@<text><a href="/HR/EmployeePositions/<%= data.Id %>/"><%= displayValue %></a></text>);


                columns.AddFor(m => m.Salary).Format("#,##0.00").Width(150).AllowEditing(false);

                columns.AddFor(m => m.TotalEarn).Width(150).Format("#,##0.00").HeaderCellTemplate(@<text>Earning</text>).AllowEditing(false);
                columns.AddFor(m => m.TotalDeduct).Width(150).Format("#,##0.00").HeaderCellTemplate(@<text>Deduction</text>).AllowEditing(false);

                columns.AddFor(m => m.Status).Width(120)
                .Lookup(lookup => lookup
                    .DataSource(Enum.GetValues(typeof(EmployeeStatus))
                        .Cast<EmployeeStatus>()
                        .Select(e => new { Value = (int)e, Text = e.ToString() })
                        .ToList())
                    .DisplayExpr("Text")
                    .ValueExpr("Value"))
                .HeaderCellTemplate(@<text>Status</text>);

             
            })
        )
</div>


