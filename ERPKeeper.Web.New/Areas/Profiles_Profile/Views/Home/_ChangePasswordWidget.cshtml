@model ERPKeeper.Web.New.Areas.Profiles.Models.ChangePasswordViewModel

 
<div class="flex flex-wrap">
    <div class="w-9/12">
        <div class="bg-white rounded-lg shadow-md p-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6" role="alert">
                    <div class="flex items-center">
                        <i class="fa-solid fa-circle-check text-green-500 mr-3"></i>
                        <p class="text-green-700">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            }

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6" role="alert">
                    <div class="flex">
                        <i class="fa-solid fa-circle-exclamation text-red-500 mr-3 mt-1"></i>
                        <div>
                            <p class="font-semibold text-red-700 mb-2">Please correct the following errors:</p>
                            <ul class="list-disc list-inside text-red-600 text-sm space-y-1">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <form asp-action="ChangePassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-lock mr-1"></i> Current Password
                    </label>
                    <input asp-for="CurrentPassword" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                           placeholder="Enter your current password" />
                    <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm mt-1 block"></span>
                </div>

                <div class="border-t pt-6">
                    <div class="mb-6">
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fa-solid fa-key mr-1"></i> New Password
                        </label>
                        <input asp-for="NewPassword" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-red-600 text-sm mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-2 flex items-start">
                            <i class="fa-solid fa-circle-info text-gray-400 mr-1 mt-0.5"></i>
                            <span>Password must be at least 6 characters long</span>
                        </p>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fa-solid fa-key mr-1"></i> Confirm New Password
                        </label>
                        <input asp-for="ConfirmPassword" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-4 border-t">
                    <a asp-action="Index" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors inline-flex items-center">
                        <i class="fa-solid fa-xmark mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors inline-flex items-center">
                        <i class="fa-solid fa-check mr-2"></i>
                        Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
