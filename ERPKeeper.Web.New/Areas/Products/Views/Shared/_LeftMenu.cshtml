@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div >
            <div class="row e-r">
                <div class="col-10 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {
                            <i class="fa-solid fa-l"></i>
                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-fb1 p-2 rounded border font-weight-600">
    @{
        MenuTemplate(0, "Products", $"/{CompanyId}/Products");
    }
</div>

<div class="lh-120 bg-fb1 p-2 rounded border">
    @{
        MenuTemplate(0, "Brands", $"/{CompanyId}/Products/Brands", Organization.ErpCOREDBContext.Brands.Count());
        MenuTemplate(0, "Items", $"/{CompanyId}/Products/Items", Organization.ErpCOREDBContext.Items.Count());
        MenuTemplate(1, "Accounts", $"/{CompanyId}/Products/Items/Accounts", Organization.ErpCOREDBContext.Items.Count());
        MenuTemplate(0, "Inventory", $"/{CompanyId}/Products/Inventory");
        MenuTemplate(0, "Groups", $"/{CompanyId}/Products/Groups", Organization.ErpCOREDBContext.ItemGroups.Count());
    }
</div>
