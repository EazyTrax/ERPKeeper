@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div >
            <div class="flex  justify-between e-r">
                <div class="w-10/12 pl-@(level)">
                    <a href="@url">
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    @{
        MenuTemplate(0, "Products", $"/Products");
    }
</div>

<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Brands", $"/Products/Brands", Organization.ErpCOREDBContext.Brands.Count());
        MenuTemplate(0, "Items", $"/Products/Items", Organization.ErpCOREDBContext.Items.Count());
        MenuTemplate(3, "Accounts", $"/Products/Items/Accounts", Organization.ErpCOREDBContext.Items.Count());
        MenuTemplate(0, "Inventory", $"/Products/Inventory");
        MenuTemplate(0, "Groups", $"/Products/Groups", Organization.ErpCOREDBContext.ItemGroups.Count());
    }
</div>
