
<style>
    .dx-treelist .dx-row > td {
        padding: 2px !important;
    }
</style>


<div id="treeListDemo" class="mb-3 border">

    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Items.Brand>()
        .ID("gridList")
        .DataSource(d => d.RemoteController().Key("Id")
        .LoadUrl($"/api/{CompanyId}/Products/Brands/All")
        .InsertUrl($"/api/{CompanyId}/Products/Brands/Insert")
        .UpdateUrl($"/api/{CompanyId}/Products/Brands/Update")
        .UpdateMethod("Post")
        )
        .KeyExpr("Id")

        
        .ShowRowLines(true)
        .ShowBorders(false)
        .Editing(editing => editing.Mode(GridEditMode.Row).AllowUpdating(true)@*
    .AllowDeleting(true)*@
        .AllowAdding(true)
        )
        .Paging(pagging => pagging.PageSize(100))
        //.SearchPanel(searchPanel => searchPanel.Visible(true))
        .HeaderFilter(headerFilter => headerFilter.Visible(true))

        .ColumnAutoWidth(false)
        @*.AutoExpandAll(true)*@
        .RowDragging(rd => rd
        .AllowDropInsideItem(false)
        .AllowReordering(false)
        @*.OnDragChange("onDragChange")
    .OnDragEnd("onDragEnd")
    .ShowDragIcons(false)*@
        )


        .Columns(columns =>
        {
            columns.Add().DataField("Name").Width(200).CellTemplate(@<text><a href="/@CompanyId/Products/Brand/<%= data.Id %>"><%= data.Name %></a></text>);
            columns.AddFor(m=>m.WebSite).Width(200).CellTemplate(@<text><a href="/@CompanyId/Products/Brand/<%= data.Id %>"><%= data.Name %></a></text>);
            columns.Add().DataField("Description").Format(Format.FixedPoint);
            columns.Add().DataField("ItemsCount").Format(Format.FixedPoint);
        })
        )
</div>


