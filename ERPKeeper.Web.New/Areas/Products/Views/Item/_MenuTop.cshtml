@model ERPKeeperCore.Enterprise.Models.Items.Item

<div class="border">
    <div class="flex font-semibold">
        <div class="w-10/12 p-2">
            / <a href="/@CompanyId/Products"> Products</a>
            / <a href="/@CompanyId/Products/Groups"> Groups</a>
            @if (Model.ItemGroupId != null)
            {
                <span>/</span>
                <a href="/@CompanyId/Products/Groups/@Model.ItemGroupId"> @Model.ItemGroup.Name</a>
            }
            / <a href="/@CompanyId/Products/Items/@Model.Id"> @Model.PartNumber</a>
        </div>

        <div class="w-2/12 p-2 text-right">

            <div class="dropdown dropleft ">
                <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa-solid fa-arrows-rotate text-xl"></i>
                </a>
                <div class="dropdown-menu p-2 bg-white border-2 border rounded" style="width:200px;height:120px;" aria-labelledby="dropdownMenuLink">
                    <div>
                        <a href="/@CompanyId/Products/Items/@Model.Id/Refresh">Refresh</a>
                    </div>
                    <div>
                        <a href="/@CompanyId/Products/Items/@Model.Id/Copy">Copy</a>
                    </div>
                    <div>
                        <a href="/@CompanyId/Products/Items/@Model.Id/UpdateStock">Stock</a>
                    </div>
                    <div>
                        <a href="/@CompanyId/Products/Items/@Model.Id/Delete">Delete</a>
                    </div>
                </div>
            </div>





        </div>


    </div>
</div>