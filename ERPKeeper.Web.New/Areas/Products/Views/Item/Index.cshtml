@model ERPKeeper.Node.Models.Items.Item

<div class="row">

    <div class="col-8 p-0 col-center mh-100v border-right border-2">
        <partial name="_MenuTop" />
        <partial name="_Detail" />
    </div>

    <div class="col-4 pr-0 col-right">
        <partial name="_Summary" />


        <div class="row bg-fb2 py-2 rounded">
            <div class="col-6">
                <span class="font-weight-600">Parameters</span>
            </div>
            <div class="col-6">
            </div>

            @foreach (var parameter in Model.GetParametersList())
            {

                <div class="col-6">
                    @parameter.ParameterType.Name
                </div>
                <div class="col-6">
                    @parameter.Value
                </div>
            }

        </div>

    </div>
</div>

