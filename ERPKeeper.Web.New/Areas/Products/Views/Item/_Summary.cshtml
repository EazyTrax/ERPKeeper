@model ERPKeeperCore.Enterprise.Models.Items.Item






<div class="flex bg-gray-100 py-2  border">
    <div class="col-6 mb-2 font-semibold">
        General
    </div>
    <div class="w-6/12">
    </div>

    <div class="w-6/12">
        Sell Price
    </div>
    <div class="w-6/12">
        @Model.SalePrice.ToString("N0")
    </div>

    <div class="w-6/12">
        Purchase Price
    </div>
    <div class="w-6/12">
        @Model.PurchasePrice.ToString("N0")
    </div>
</div>

<div class="flex bg-gray-100 py-2  border">
    <div class="col-6 mb-2 font-semibold">
        Stock
    </div>
    <div class="w-6/12">
        <a href="/@CompanyId/Products/Items/@Model.Id/Refresh/Stock">
            <i class="fa-solid fa-arrows-rotate text-xl"></i>
        </a>
    </div>

    <div class="w-6/12">
        Purchase
    </div>
    <div class="w-6/12">
        @Model.PurchaseAmount.ToString("N0")
    </div>

    <div class="w-6/12">
        Sold
    </div>
    <div class="w-6/12">
        @Model.SoldAmount.ToString("N0")
    </div>

    <div class="w-6/12">
        Adjust
    </div>
    <div class="w-6/12">
        @Model.StockAmount.ToString("N0")
    </div>


    <div class="w-6/12">
        Stock
    </div>
    <div class="w-6/12">
        @Model.AmountOnHand.ToString("N0")
    </div>
</div>