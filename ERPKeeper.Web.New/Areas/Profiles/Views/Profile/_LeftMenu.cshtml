@model ERPKeeperCore.Enterprise.Models.Profiles.Profile

@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div >
            <div class="row e-r">
                <div class="col-10 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {
                            <i class="fa-solid fa-l"></i>
                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-12 bg-fb1 p-2 border">
    @{

        MenuTemplate(0, "Profiles", $"/{CompanyId}/Profiles");
    }
</div>


<div class="lh-12 bg-fb1 p-2 border">
    @{
        MenuTemplate(0, "General", $"/{CompanyId}/Profiles/{Model.Id}");
        MenuTemplate(0, "Addresses", $"/{CompanyId}/Profiles/{Model.Id}/Addresses", Model.Addresses.Count());
        MenuTemplate(0, "Contacts", $"/{CompanyId}/Profiles/{Model.Id}/Contacts", Model.Addresses.Count());


    }
</div>