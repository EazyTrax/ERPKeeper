@model ERPKeeperCore.Enterprise.Models.Profiles.Profile


<div class="flex border">
    <div class="">


        @{
            if (Model.Customer != null)
            {
                <div class="p-2 border float-left">
                    <a href="/@CompanyId/Customers/Customers/@Model.Id">Customer</a>
                </div>
            }
            if (Model.Supplier != null)
            {
                <div class="p-2 border float-left">
                    <a href="/@CompanyId/Suppliers/Suppliers/@Model.Id">Supplier</a>
                </div>
            }
            if (Model.Employee != null)
            {
                <div class="p-2 border float-left">
                    <a href="/@CompanyId/Employees/Employees/@Model.Id">Employee</a>
                </div>
            }
            if (Model.Investor != null)
            {
                <div class="p-2 border float-left">
                    <a href="/@CompanyId/Investors/Investors/@Model.Id">Investor</a>
                </div>
            }
        }



    </div>
</div>

