@model ERPKeeperCore.Enterprise.Models.Accounting.JournalEntry

<div class="mb-2 border-top">
    @(Html.DevExtreme().DataGrid<ERPKeeperCore.Enterprise.Models.Accounting.JournalEntryItem>()
            .ID("LedgerList")
            .KeyExpr("JournalEntryItemId")
            .DataSource(d => d.RemoteController()
            .Key("JournalEntryItemId")
            .LoadUrl($"/api/{CompanyId}/Accounting/JournalEntries/{Model.Id}/JournalEntryItems/All")
            .InsertUrl($"/api/{CompanyId}/Accounting/JournalEntries/{Model.Id}/JournalEntryItems/Insert")
            .UpdateUrl($"/api/{CompanyId}/Accounting/JournalEntries/{Model.Id}/JournalEntryItems/Update")
            .UpdateMethod("Post"))
            .AllowColumnReordering(true)
            .RowAlternationEnabled(false).ShowRowLines(true).HoverStateEnabled(true)
            .ShowColumnLines(true)
            .ShowBorders(false)
            .ColumnAutoWidth(false)
            .Paging(pagging => pagging.PageSize(100))
            .Editing(editing => editing.Mode(GridEditMode.Row).AllowUpdating(IsOnEditMode).AllowAdding(IsOnEditMode).UseIcons(true))

            .Columns(columns =>
            {
                columns.AddFor(m => m.AccountUid)
                    .Lookup(lookup => lookup.DataSource(Organization.ErpCOREDBContext.AccountItems.Select(t => new { t.Uid, t.Name }).OrderBy(t => t.Name).ToList()).DisplayExpr("Name").ValueExpr("Id"))
                    .Width(200).HeaderCellTemplate(@<text>Account</text>);

               
                columns.AddFor(m => m.Account.Type)
    .HeaderCellTemplate("Type")
    .AllowEditing(false)
    .Width(100).SortOrder(SortOrder.Asc).SortIndex(1).Lookup(lookup => lookup
    .DataSource(Html.GetEnumSelectList<ERPKeeperCore.Enterprise.Models.Accounting.AccountTypes>().Select(i => new { Value = int.Parse(i.Value), Text = i.Text }))
    .DisplayExpr("Text")
    .ValueExpr("Value")
    );


                columns.AddFor(m => m.Memo).SortOrder(SortOrder.Desc).CellTemplate(@<text><a href="/@CompanyId/Accounting/JournalEntries/<%= data.Uid %>/"><%= data.Memo %></a></text>);
                columns.AddFor(m => m.Debit).Width(100).Format(",##0.00");
                columns.AddFor(m => m.Credit).Width(100).Format(",##0.00");
            })
                .Summary(s => s.TotalItems(items =>{
            items.AddFor(m => m.Debit).SummaryType(SummaryType.Sum).DisplayFormat("{0}").ValueFormat(",##0.00");
            items.AddFor(m => m.Credit).SummaryType(SummaryType.Sum).DisplayFormat("{0}").ValueFormat(",##0.00");
            }))
        )
</div>










