@model ERPKeeperCore.Enterprise.Models.Accounting.Account

<div class="flex bg-gray-100 justify-between">
    <div class="font-semibold text-lg text-uppercase p-2">
        <a href="/@CompanyId/Accounting">Accounting</a>
        <i class="fa-solid fa-chevron-right text-danger text-sm"></i>
        <a href="/@CompanyId/Accounting/Accounts">Accounts</a>
        <i class="fa-solid fa-chevron-right text-danger text-sm"></i>
        <a href="/@CompanyId/Accounting/Accounts/@Model.Id">@Model.Code @Model.Name</a>
    </div>
    <div class="p-2">
        <a href="/@CompanyId/Accounting/Accounts/@Model.Id/UpdateCurrentBalance">Current Balance</a>
        .
        <a href="/@CompanyId/Accounting/Accounts/@Model.Id/UpdateHistoryBalance">History Balance</a>
    </div>
</div>

