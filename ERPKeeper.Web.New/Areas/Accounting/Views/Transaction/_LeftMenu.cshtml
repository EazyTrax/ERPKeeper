@using ERPKeeperCore.Enterprise.Models.Accounting.Enums
@model ERPKeeperCore.Enterprise.Models.Accounting.Transaction

@{
    bool checkCurrentController(string controllerName)
    {
        var currentControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
        return currentControllerName == controllerName;
    }

    void Template(string display, string controller, int? count = null)
    {
        <div class="flex e pl-0 @(checkCurrentController(controller) ? "font-weight-600" : "")">
            <div class="grow">
                <a href="/@CompanyId/Accounting/@controller">
                    @SharedLocalizer.GetLocalizedHtmlString(display)
                </a>
            </div>
            <div class="w-2/12 p-0 text-right">
                <span class="badge badge-light text-dark">@count</span>
            </div>
        </div>
    }
}

<div class="bg-fb1 p-2 border text-xl">
    <div class="font-weight-600">
        <a href="/@CompanyId/Accounting">Accounting</a>
    </div>
</div>
<div class="bg-fb1 p-2 text-xl">
    <a href="/@CompanyId/Accounting/Transactions">Transactions</a>
    <a href="/@CompanyId/Accounting/Transactions/@Model.Id">@Model.Reference</a>


    @switch (Model.Type)
    {
        case TransactionType.Sale:
        case TransactionType.ReceivePayment:
            <a href="/@CompanyId/Customers/@(Model.Type)s/@Model.Id">@Model.Type</a>
            break;
        case TransactionType.Purchase:
        case TransactionType.SupplierPayment:
            <a href="/@CompanyId/Suppliers/@(Model.Type)s/@Model.Id">@Model.Type</a>
            break;
        case TransactionType.FundTransfer:
        case TransactionType.Lend:
        case TransactionType.Loan:
        case TransactionType.LiabilityPayment:
            <a href="/@CompanyId/Financial/@(Model.Type)s/@Model.Id">@Model.Type</a>
            break;
        case TransactionType.JournalEntry:
            <a href="/@CompanyId/Accounting/JournalEntries/@Model.Id">@Model.Type</a>
            break;
        case TransactionType.FiscalYearClosing:
            <a href="/@CompanyId/Accounting/@(Model.Type)s/@Model.Id">@Model.Type</a>
            break;
        case TransactionType.IncomeTax:
        case TransactionType.TaxPeriod:
            <a href="/@CompanyId/Taxes/@(Model.Type)s/@Model.Id">@Model.Type</a>
            break;
    }

</div>

