@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="col-10 pl-@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-200 px-2 py-1 font-semibold rounded border">
    @{
        MenuTemplate(0, "Setting", $"/Setting");
    }
</div>
<div class="lh-120 bg-gray-200 px-2 py-1  bg-gray-200 rounded border">
    @{
        MenuTemplate(0, "Branches", $"/Setting/Branches", Organization.ErpCOREDBContext.Branches.Count());

        MenuTemplate(0, "Logistic", $"");

        MenuTemplate(3, "Provider", $"/Setting/ShipmentProviders", Organization.ErpCOREDBContext.MemoTemplates.Count());

        MenuTemplate(0, "MemoTemplates", $"/Setting/MemoTemplates", Organization.ErpCOREDBContext.MemoTemplates.Count());

    }
