@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex e-r">
                <div class="w-10/12 p-l@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="w-2/12 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}

<div class="lh-120 bg-gray-100 p-2 rounded border font-semibold">
    <a href="/@CompanyId/Profiles">Profiles</a> <br/>
    <a href="/@CompanyId/Employees">Employees</a>
</div>


<div class="lh-120 bg-gray-100 p-2 rounded border">
    @{
        MenuTemplate(0, "Positions", $"/{CompanyId}/Employees/EmployeePositions", Organization.ErpCOREDBContext.EmployeePositions.Count());
        MenuTemplate(0, "Employees", $"/{CompanyId}/Employees/Employees", Organization.Employees.Count());
        MenuTemplate(1, "Payment Types", $"/{CompanyId}/Employees/EmployeePaymentTypes", Organization.ErpCOREDBContext.EmployeePaymentTypes.Count());
        MenuTemplate(1, "Payment Periods", $"/{CompanyId}/Employees/EmployeePaymentPeriods", Organization.ErpCOREDBContext.EmployeePaymentPeriods.Count());
        MenuTemplate(0, "Payments", $"/{CompanyId}/Employees/EmployeePayments", Organization.ErpCOREDBContext.EmployeePayments.Count());

        // MenuTemplate(1, "Items", $"/{CompanyId}/Employees/EmployeePaymentItems", Organization.ErpCOREDBContext.EmployeePaymentTypes.Count());

    }
</div>

