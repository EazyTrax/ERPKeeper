@{
    var branch = Organization.ErpCOREDBContext.Branches.FirstOrDefault();
    var paymentAccounts = Organization.ErpCOREDBContext.Accounts.Where(a => a.IsReceivable).ToList();
}


<div class="">
    @SharedLocalizer.GetLocalizedHtmlString("Payment")<br />
    @SharedLocalizer.GetLocalizedHtmlString("Account"): @branch.OrganizationName<br />
    @{
        foreach (var acc in paymentAccounts)
        {
            <div>
                @acc.ReceivableDisplayName
            </div>
        }
    }
</div>
