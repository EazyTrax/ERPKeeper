@model string

@{
    var branch = Organization.ErpCOREDBContext.Branches.FirstOrDefault();
}


<div class="flex py-3">
    <div class="w-3/12">
        <div class="text-2xl font-semibold text-red-600 leading-tight">
            Engineering
            Craft
        </div>
    </div>
    <div class="grow px-4">
        <div>
            <div class="font-semibold">@branch.OrganizationName</div>
            <div>
                เลขที่ผู้เสียภาษี @branch.TaxNumber สาขา @branch.BranchName
            </div>
        </div>
        <div>
            @branch.Address
        </div>
        <div>
            @branch.PhoneNumber
            @branch.WebSite
        </div>
    </div>
    <div class="w-3/12">
        @if (!string.IsNullOrEmpty(Model))
        {
            <div class="font-semibold text-lg text-right">@Model</div>
        }
    </div>
</div>
