@{
    void MenuTemplate(int level, string displayName, string url, int? count = null)
    {
        <div>
            <div class="flex  justify-between e-r">
                <div class="col-10 px-@(level)">
                    <a href="@url">
                        @if (level > 0)
                        {

                        }
                        @SharedLocalizer.GetLocalizedHtmlString(displayName)
                    </a>
                </div>
                <div class="col-2 p-0 text-right p-0">
                    <span class="menuCount">@count</span>
                </div>
            </div>
        </div>
    }
}


<div class="lh-120 bg-fb1 px-2  rounded border">
    @{
        MenuTemplate(0, "Customers", $"/Customers", Organization.Customers.Count());
        MenuTemplate(0, "Suppliers", $"/Suppliers", Organization.Suppliers.Count());
        MenuTemplate(0, "Employees", $"/Employees", Organization.Employees.Count());
        MenuTemplate(0, "Investors", $"/Investors", Organization.Investors.Count());
        MenuTemplate(0, "Profiles", $"/Profiles", Organization.Profiles.Count());
    }
</div>
<div class="lh-120 bg-fb1 px-2  rounded border">
    @{
        MenuTemplate(0, "Products", $"/Products", Organization.Items.Count());
    }
</div>

<div class="lh-120 bg-fb1 px-2  rounded border">
    @{
        MenuTemplate(0, "Accounting", $"/Accounting");
        MenuTemplate(0, "Financial", $"/Financial");
        MenuTemplate(0, "Assets", $"/Assets", Organization.Assets.Count());
