@using Microsoft.AspNetCore.Http
@using System.Security.Claims;


<div class="dropdown dropleft ">
    <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @if (IsOnEditMode)
        {
            <i class="fa-regular fa-lock-open text-fs-21 text-danger"></i>
        }
        else
        {
            <i class="fa-regular fa-lock  text-fs-21"></i>
        }
    </a>
    <div class="dropdown-menu bg-white border-2 border rounded" style="width:200px;height:120px;" aria-labelledby="dropdownMenuLink">
        <div class="px-2">
            <a href="/My/Setting/EditMode/View">
                <div class="flex">
                    <div class="w-2/12 p-0">
                        <i class="fa-regular fa-lock  text-fs-21"></i>
                    </div>
                    <div class="w-10/12 text-fs-21">
                        Locked
                    </div>
                </div>
            </a>
            <a href="/My/Setting/EditMode/Edit">
                <div class="flex">
                    <div class="w-2/12 p-0">
                        <i class="fa-regular fa-lock-open  text-fs-21"></i>
                    </div>
                    <div class="w-10/12 text-fs-21">
                        Edit
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>


