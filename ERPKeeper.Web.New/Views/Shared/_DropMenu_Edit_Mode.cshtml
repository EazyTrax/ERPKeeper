@using Microsoft.AspNetCore.Http
@using System.Security.Claims;

<div class="dropdown dropleft ">
    <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @if (IsOnEditMode)
        {
            <i class="fa-solid fa-lock-open text-xl "></i>
        }
        else
        {
            <i class="fa-solid fa-lock  text-xl "></i>
        }
    </a>
    <div class="dropdown-menu bg-white border-2 border rounded min-w-64 min-h-40" aria-labelledby="dropdownMenuLink">
        <div class="px-2">
            <a href="/My/Setting/EditMode/View" class="">
                <div class="flex flex-wrap">
                    <div class="w-2/12">
                        <i class="fa-regular fa-lock text-xl"></i>
                    </div>
                    <div class="w-10/12 text-xl">
                        Locked
                    </div>
                </div>
            </a>
            <a href="/My/Setting/EditMode/Edit" class="">
                <div class="flex flex-wrap">
                    <div class="w-2/12">
                        <i class="fa-regular fa-lock-open text-xl"></i>
                    </div>
                    <div class="w-10/12 text-xl">
                        Edit
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>