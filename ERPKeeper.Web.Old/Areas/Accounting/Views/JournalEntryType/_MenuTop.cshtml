@model ERPKeeper.Node.Models.Accounting.JournalEntryType

<div class="bg-fb2 p-2 mb-2 mh-50">
    <b>Journal Entry</b>
</div>


@Html.DevExpress().Menu(settings =>
{
    settings.Name = "mFeatures";
    settings.AllowSelectItem = true;
    settings.EnableHotTrack = true;
    settings.EnableAnimation = true;
    settings.ShowPopOutImages = DefaultBoolean.True;
    settings.Orientation = System.Web.UI.WebControls.Orientation.Vertical;
    settings.Width = 200;
    settings.Styles.Item.Paddings.Padding = Unit.Pixel(5);

    if (Model != null)
    {
        settings.Items.Add("Home").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "JournalEntryType", Action = "Home", id = Model.Uid });
        settings.Items.Add("Journal Entries").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "JournalEntryType", Action = "ListEnties", id = Model.Uid });
    }


}).GetHtml()

<br /><br />
<div class="mt-3">
    <a href="@Url.Action("Home", "JournalEntryTypes", new { Area = "Accounting" })">
        <i class="fas fa-arrow-alt-circle-left fa-lg text-muted"></i>
    </a>
    <span id="ImageMenuAction" style="cursor:pointer"><i class="fab fa-chrome fa-lg text-muted"></i></span>
</div>


@Html.DevExpress().PopupMenu(settings =>
{
    settings.Name = "PopupMenuAdd";
    settings.PopupElementID = "ImageMenuAction";
    settings.ShowPopOutImages = DefaultBoolean.True;
    settings.PopupAction = PopupAction.LeftMouseClick;
    settings.Styles.Item.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(5);
    if (Model != null)
    {
        settings.Items.Add("Create Journal Entry").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "JournalEntry", Action = "New", JournalEntryTypeGuid = Model.Uid });
    }
}).GetHtml()
