<div class="globalContainer">
    <div class="row">
        <div class="col-2 col-Left pl-0">
            @Html.Action("_Main", "Default", new { Area = "Menu" })
        </div>
        <div class="col col-Middle p-0">
            @Html.Partial("_MenuTop")
            @Html.Action("PartialGridView")
        </div>
        <div class="col-3 pr-0">




            <div class="mb-2">
                <div class="p-2   mb-1 bg-fb2 mh-80">
                    <b>FirstDate</b> @Organization.DataItems.FirstDate.ToString("dd-MMM-yy")<br />
                </div>
                <div class="p-2 mb-2 bg-fb2 mh-50">

                    @Organization.SelfProfile.Name<br />
                    @Organization.SelfProfile.TaxNumber
                    @Organization.SelfProfile.PrimaryAddress.AddressLine
                </div>
            </div>



        </div>
    </div>
</div>


