<div class="row bg-fb2 p-1 mb-2 mh-50 rounded">
    <div class="col-9 p-1">
        <ol class="breadcrumb mb-0 font-weight-bold bg-none p-0">
            <li class="breadcrumb-item text-uppercase">
                <a href="@Url.Action("Home", "Home",new { Area = "DashBoard"})">HOME</a>
            </li>
            <li class="breadcrumb-item text-uppercase">
                <a href="@Url.Action("Home", "Customers",new { Area = "DashBoard"})">Customers</a>
            </li>
            <li class="breadcrumb-item text-uppercase active" aria-current="page">
                <a href="@Url.Action("Home", "ReceivePayments",new { Area = "Customers"})">Receive Payments</a>
            </li>
        </ol>
    </div>


    <div class="col text-right p-2">
        <span id="ImageMenuAction" style="cursor:pointer"><i class="fab fa-chrome fa-lg text-muted"></i></span>
        @Html.DevExpress().PopupMenu(settings =>
{
    settings.Name = "PopupMenuAction";
    settings.PopupElementID = "ImageMenuAction";
    settings.ShowPopOutImages = DefaultBoolean.True;
    settings.PopupAction = PopupAction.LeftMouseClick;


    settings.Styles.Item.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(5);

    settings.Items.Add(item =>
    {
        item.Text = "Export";
        item.Items.Add("Last Month").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "ReceivePayments", Action = "Export" });
        item.Items.Add("All").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "ReceivePayments", Action = "Export" });
    });
    settings.Items.Add("ReOrder").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "ReceivePayments", Action = "ReOrder" });
}).GetHtml()
    </div>
</div>

