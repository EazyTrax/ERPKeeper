@model ERPKeeper.Node.Models.Profiles.Profile



<div class="globalContainer">
    <div class="row">
        <div class="col-2 col-Left pl-0">
            @Html.Action("_Main", "Default", new { Area = "Menu" })

        </div>
        <div class="col col-Middle p-0">
            @Html.Partial("_MenuTop")


            @if (Model.Uid != Guid.Empty)
            {
                @Html.Action("_Addresses", "Addresses", new { id = Model.Uid })<br /><br />

                <div style="text-align:right;margin-bottom:10px;">
                    <span class="btn-light  mr-2">@Html.ActionLink("Rd Update", "UpdateRdAddresses", "Profile", new { id = Model.Uid }, null) </span>
                    <span class="btn-light "> @Html.ActionLink("New", "New", "Address", new { ProfileGuid = Model.Uid }, null)</span>
                </div>
            }


        </div>
        <div class="col-3 col-Right pr-0">
            @Html.Partial("_Role", Model)


        </div>
    </div>
</div>
