@model ERPKeeper.Node.Models.Profiles.Profile

<div class="globalContainer">
    <div class="row">
        <div class="col-2 col-Left pl-0">
            @Html.Action("_Main", "Default", new { Area = "Menu" })

        </div>
        <div class="col col-Middle p-0">
            @Html.Partial("_MenuTop")

            @using (Html.BeginForm("UploadIcon", "Profile", new { id = Model.Uid }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Uid)
                <input type="file" name="image" enctype="multipart/form-data" />
                <input type="submit" />
            }
            <br /><br />

            @if (Model.Picture != null)
            {
                <div style="padding:5px;">
                    <img src="@Url.Action("GetImage","profile",new { id= Model.Uid})" width="200" style="border:solid 1px #CCCCCC" />
                </div>
            }
        </div>
    </div>
</div>