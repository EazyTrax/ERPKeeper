@model ERPKeeper.Node.Models.Profiles.Profile

<div class="bg-fb2">
    @using (Html.BeginForm("Save", "Profile", new { Area = "Profiles" }, FormMethod.Post, new { @id = "SaveForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Uid)
        @Html.DevExpress().FormLayout(settings =>
   {
       settings.Name = "AccountInformation";
       settings.Width = Unit.Percentage(100);
       settings.ColCount = 2;

       settings.Items.AddGroupItem(leftGroupSetting =>
       {
           leftGroupSetting.GroupBoxDecoration = GroupBoxDecoration.None;



           leftGroupSetting.Items.AddGroupItem(groupSettings =>
           {
               groupSettings.Caption = "Basic Info";
               groupSettings.ColumnSpan = 1;
               groupSettings.Width = Unit.Pixel(350);
               groupSettings.GroupBoxDecoration = GroupBoxDecoration.Box;
               groupSettings.GroupBoxStyle.Caption.Font.Bold = true;
               groupSettings.GroupBoxStyle.Caption.ForeColor = System.Drawing.Color.Black;

               groupSettings.Items.Add(m => m.TitleName, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });
               groupSettings.Items.Add(m => m.Name, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });

               groupSettings.Items.Add(m => m.ShotName, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
                   tbs.Width = Unit.Pixel(50);
                   tbs.Properties.MaxLength = 5;

               });

               groupSettings.Items.Add(m => m.TaxNumber, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });
            


           });

           leftGroupSetting.Items.AddGroupItem(groupSettings =>
           {
               groupSettings.Caption = "Contact";
               groupSettings.ColumnSpan = 1;
               groupSettings.Width = Unit.Pixel(350);
               groupSettings.GroupBoxDecoration = GroupBoxDecoration.Box;
               groupSettings.GroupBoxStyle.Caption.Font.Bold = true;
               groupSettings.GroupBoxStyle.Caption.ForeColor = System.Drawing.Color.Black;


               groupSettings.Items.Add(m => m.PhoneNumber, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });

               groupSettings.Items.Add(m => m.Email, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });

               groupSettings.Items.Add(m => m.WebSite, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });
               groupSettings.Items.Add(m => m.FaceBook, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });

           });

           leftGroupSetting.Items.AddGroupItem(groupSettings =>
           {
               groupSettings.Caption = "Authentication";
               groupSettings.ColumnSpan = 1;
               groupSettings.Width = Unit.Pixel(350);
               groupSettings.GroupBoxDecoration = GroupBoxDecoration.Box;
               groupSettings.GroupBoxStyle.Caption.Font.Bold = true;
               groupSettings.GroupBoxStyle.Caption.ForeColor = System.Drawing.Color.Black;


               groupSettings.Items.Add(m => m.Pin, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   TextBoxSettings tbs = (TextBoxSettings)itemSettings.NestedExtensionSettings;
               });
               groupSettings.Items.Add(m => m.AccessLevel, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   itemSettings.NestedExtensionType = FormLayoutNestedExtensionItemType.ComboBox;
               });
           });
       });
       settings.Items.AddGroupItem(rightGroupSetting =>
       {
           rightGroupSetting.GroupBoxDecoration = GroupBoxDecoration.Box;
           rightGroupSetting.Caption = "Other Detail";
           rightGroupSetting.Items.AddGroupItem(groupSettings =>
           {

               groupSettings.Caption = "Home";
               groupSettings.ColumnSpan = 1;
               groupSettings.Width = Unit.Pixel(300);
               groupSettings.GroupBoxDecoration = GroupBoxDecoration.None;
               groupSettings.GroupBoxStyle.Caption.Font.Bold = true;
               groupSettings.GroupBoxStyle.Caption.ForeColor = System.Drawing.Color.Black;


               groupSettings.Items.Add(m => m.DetailContact, itemSettings =>
               {
                   itemSettings.CaptionSettings.Location = LayoutItemCaptionLocation.Top;
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   itemSettings.NestedExtensionType = FormLayoutNestedExtensionItemType.Memo;
                   MemoSettings tbs = (MemoSettings)itemSettings.NestedExtensionSettings;
                   tbs.Width = Unit.Percentage(100);
                   tbs.Height = Unit.Pixel(100);
               });
               groupSettings.Items.Add(m => m.DetailLogin, itemSettings =>
               {
                   itemSettings.CaptionCellStyle.CssClass = "CaptionWidth";
                   itemSettings.CaptionSettings.Location = LayoutItemCaptionLocation.Top;
                   itemSettings.NestedExtensionType = FormLayoutNestedExtensionItemType.Memo;
                   MemoSettings tbs = (MemoSettings)itemSettings.NestedExtensionSettings;

                   tbs.Width = Unit.Percentage(100);
                   tbs.Height = Unit.Pixel(100);
               });


           });
       });

       settings.Items.Add(item =>
       {
           item.ColumnSpan = 2;
           item.NestedExtensionType = FormLayoutNestedExtensionItemType.Button;
           item.ShowCaption = DefaultBoolean.False;
           item.HorizontalAlign = FormLayoutHorizontalAlign.Right;
           var button = (ButtonSettings)item.NestedExtensionSettings;
           button.Name = "SaveButton";
           button.Text = "Save";
           button.UseSubmitBehavior = true;
       });
   }).GetHtml()
    }
</div>