@model ERPKeeper.Node.Models.Items.Brand

<div class="bg-fb2 p-2 mb-1">
    <div class="row">
        <div class="col-9 p-1">
            <span class="bg-dark px-2 mt-2 mr-3 text-white">
                Brand
            </span>
            <b class="px-2">@Model.Name</b><br />
        </div>
        <div class="col-3 text-right">
            <span id="ImageMenuAction" style="cursor:pointer"><i class="fab fa-chrome fa-lg text-muted"></i></span>
            @Html.DevExpress().PopupMenu(settings =>
            {
                settings.Name = "PopupMenuAction";
                settings.PopupElementID = "ImageMenuAction";
                settings.ShowPopOutImages = DefaultBoolean.True;
                settings.PopupAction = PopupAction.LeftMouseClick;

                settings.Styles.Item.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(5);
                settings.Items.Add("Delete").NavigateUrl = DevExpressHelper.GetUrl(new { Action = "Delete", id = Model.Uid });
            }).GetHtml()
        </div>
    </div>
</div>
<div class="mb-2">
    @Html.DevExpress().Menu(settings =>
    {
        settings.Name = "mFeatures";
        settings.AllowSelectItem = true;
        settings.EnableHotTrack = true;
        settings.EnableAnimation = true;
        settings.ShowPopOutImages = DefaultBoolean.True;
        settings.EncodeHtml = false;

        settings.Styles.Item.CssClass = "px-1";
        settings.Orientation = System.Web.UI.WebControls.Orientation.Horizontal;
        settings.Width = 200;


        settings.Items.Add("Home").NavigateUrl = DevExpressHelper.GetUrl(new { Action = "Home", id = Model.Uid });
        settings.Items.Add(ERPKeeper.Helpers.Badge.Info(Model.ItemsCount) + "Items").NavigateUrl = DevExpressHelper.GetUrl(new { Action = "Items", id = Model.Uid });




    }).GetHtml()
</div>
