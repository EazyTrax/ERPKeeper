@model ERPKeeper.Node.Models.Assets.FixedAssetType

<div class="row bg-fb2 p-1 mb-2 mh-50 rounded">

    <div class="col">
        <b>@Lang.FixedAssetTypes.ToUpper()</b><br />
    </div>


    <div class="col text-right">
        <span id="ImageMenuSync" style="cursor:pointer"><i class="fas fa-sync-alt fa-lg text-light"></i></span>

        @Html.DevExpress().PopupMenu(settings =>
   {
   settings.Name = "MenuSync";
   settings.PopupElementID = "ImageMenuSync";
   settings.ShowPopOutImages = DefaultBoolean.True;
   settings.PopupAction = PopupAction.LeftMouseClick;


   settings.Styles.Item.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(5);
   if (Model != null)
   {
       settings.Items.Add("AutoCreateAccount").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "FixedAssetType", Action = "AutoCreateAccount", id = Model.Uid });
       settings.Items.Add("New Assets").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "FixedAssetType", Action = "New", depreciationBasisGuid = Model.Uid });
            }
        }).GetHtml()
    </div>

</div>

@Html.DevExpress().Menu(settings =>
{
    settings.Name = "mFeatures";
    settings.AllowSelectItem = true;
    settings.EnableHotTrack = true;
    settings.EnableAnimation = true;
    settings.ShowPopOutImages = DefaultBoolean.True;

    settings.Orientation = System.Web.UI.WebControls.Orientation.Horizontal;
    settings.Width = 200;

    if (Model != null)
    {
        settings.Items.Add(Lang.Home).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "FixedAssetType", Action = "Home", id = Model.Uid });
        settings.Items.Add(ERPKeeper.WebFrontEnd.Resources.Lang.FixedAssets).NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "FixedAssetType", Action = "ListFixedAssets", id = Model.Uid });
    }

}).GetHtml()

