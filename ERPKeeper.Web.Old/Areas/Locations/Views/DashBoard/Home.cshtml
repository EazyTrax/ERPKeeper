<div class="globalContainer">
    <div class="row">
        <div class="col-2 col-Left pl-0">
            @Html.Action("_Main", "Default", new { Area = "Menu" })

        </div>
        <div class="col col-Middle p-0">
            @Html.Partial("_MenuTop")
            <div class="row">

                @foreach (var location in Organization.Locations.GetRootList())
                {
                    <div class="col-6 pl-0">
                        @Html.Partial("~/Areas/Locations/Views/Location/_Location.cshtml", location)
                    </div>
                }
                <div class="col-6 pl-0">


                    <div class="bg-fb2 p-2 rounded">
                        <a href="/Locations/Locations/New">
                            <i class="fas fa-plus-circle"></i>
                        </a>
                    </div>
                </div>
            </div>



        </div>
        <div class="col-3 col-Right pr-0">
            <div class="row">
                <div class="col-6 p-1">
                    <div class="bg-danger p-2 rounded text-white">
                        <div class="px-1">
                            @Organization.Locations.GetAll().Count()
                        </div>
                        <div class="text-right">
                            Locations
                        </div>
                    </div>
                </div>
                <div class="col-6 p-1">
                    <div class="bg-danger p-2 rounded text-white">
                        <div class="px-1">
                            @Organization.Locations.GetAll().Count()
                        </div>
                        <div class="text-right">
                            Locations
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
