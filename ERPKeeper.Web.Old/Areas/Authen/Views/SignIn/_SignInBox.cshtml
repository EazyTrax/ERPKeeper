@model ERPKeeper.Node.Models.Security.LogInModel

<div class="bg-fb2 m-2 p-3 rounded">
    @using (Html.BeginForm("Authen", "SignIn", new { Area = "Authen" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(Model => Model.ReturnUrl)
        <div class="row p-2">
            <div class="col-12">
                <strong class="text-uppercase">Email</strong>
            </div>
            <div class="col-12 pt-1">
                @Html.TextBoxFor(Model => Model.Email, new { style = "width:250px;" })<br />
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="col-12 pt-3">
                <strong class="text-uppercase">PASSWORD</strong><br />
            </div>
            <div class="col-6 pt-1">
                @Html.DevExpress().TextBoxFor(m => m.Pin,
                         settings =>
                         {
                             settings.Properties.Password = true;
                             settings.Properties.NullText = "Pin";
                             settings.Width = 160;
                         }).GetHtml()

                @Html.ValidationMessageFor(x => x.Pin)
            </div>
            <div class="col-6 py-1 text-right">
                <button type="submit" class="btn btn-dark py-0 px-2 btn-sm mr-1">Log In</button>
            </div>
            @Html.ValidationMessage("CustomError")
        </div>
    }
</div>